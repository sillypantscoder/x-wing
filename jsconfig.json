{
	"compilerOptions": {
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"target": "ES2020",
		"jsx": "react",
		"allowImportingTsExtensions": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,

		"checkJs": true,
		"strict": true
	},
	"exclude": [
		"node_modules",
		"**/node_modules/*"
	],
	"include": [
		"client/*.js"
	]
}